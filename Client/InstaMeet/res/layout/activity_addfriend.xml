<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_addfriend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" xmlns:android1="http://schemas.android.com/apk/res/android">

    <EditText
        android1:id="@+id/addfriend_username"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:ems="10"
        android1:hint="@string/addfriend_username" >

        <requestFocus />
    </EditText>

    <Button
        android1:id="@+id/addfriend_button_add"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_gravity="center_horizontal"
        android1:text="@string/addfriend_button_add" />

</LinearLayout>
